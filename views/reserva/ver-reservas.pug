extends ../layout/opciones_usuario

block opciones_moderador
    h2.tituloCategoria= pagina

    div.VerEtiquetasMesa
        p Fecha de Reserva
        p Hora de Reserva
        p.ocultarCelu Personas
        p Estado 
        p.ocultarCelu Mesa
        p Código
    div.datosReservas
        if reservas.length
            each reserva in reservas
                div.datosVerReserva
                    p= reserva.fecha
                    p= reserva.hora.hora
                    p.ocultarCelu= reserva.personas
                    //- p.ocultarCelu= reserva.comida
                    if reserva.estadoId == null
                        p En Espera
                    else 
                        p= reserva.estado.estado
                    p.ocultarCelu= reserva.mesaId
                    if reserva.estado == null 
                        p Sin Código
                    else
                        p= reserva.codigo
                    a.btnOpcion.ocultarPc(href=`/reserva/ver-mas/${reserva.id}`) Ver Mas