//- block opciones_moderador
extends ../layout/index

block contenido
    div.login.contenedor
        div.posFormReserva
            h2.tituloLogins.letraBlanca= pagina

            if errores
                div.errores
                    each error in errores
                        p.error= error.msg

            form( method="POST" action="/reserva/realizar-reserva")
                input(type="hidden", name="_csrf" value= csrfToken)
                div.divLogins
                    label.labelLogins.letraBlanca(for="fecha") Fecha de Reservacion 
                    input.inputReserva(type="date" name="fecha" value= datos.fecha ? datos.fecha : '')  
                div.divReserva
                    p *Haz la reservacion con minimo 1 hora de antelacion
                    label.labelLogins.letraBlanca(for="hora") Hora de Reservacion
                    select.inputReserva#hora(name="hora") 
                        option(value="") - Seleccione - 
                        each hora in horas
                            option(value=hora.id selected= datos.hora ? datos.hora == hora.id ? true : false : null)= hora.hora  
                div.divLogins 
                    label.labelLogins.letraBlanca(for="personas") Numero de Personas 
                    input.inputReserva(type="number" name="personas" value= datos.personas ? datos.personas : '')
                    p.labelLogins.marginReserva.letraBlanca Â¿Desea Reservar comida?
                div.btnsRadio
                    div.btnsRadio 
                        label.labelLogins.letraBlanca(for="si") Si
                        input.btnRadio(type="radio" name="comida" id="si" value="si")  
                    div.btnsRadio
                        label.labelLogins.letraBlanca(for="no") No
                        input.btnRadio(type="radio" name="comida" id="no" value="no") 
                input.btnLogins.padding(type="submit" value="Continuar") 
        div
            img.imgLogin.imgReserva(src="../img/Login.jpg", alt="")