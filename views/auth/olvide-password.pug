extends ../layout/index

block contenido
    div 
        h2.titulo= pagina
    div

    if errores
    div
        each error in errores
            p.error= error.msg

    form(method="POST" action='/auth/olvide-password')
        input(type="hidden" name="_csrf" value= csrfToken )
        div 
            label(for="email") Correo Electronico
            input#email(placeholder="Correo Electronico", type="text", name="email")

        input(type="submit", value="Enviar Instrucciones")